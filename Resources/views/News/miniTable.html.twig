{% if news|length > 0 %}
    <table class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th>#</th>
            <th>Titre</th>
            <th>Date de publication</th>
            <th>Auteur</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td><small>{{ loop.index }}</small></td>
                <td>{{ news.title }}</td>
                <td>{{ news.createdAt|date('d/m/Y') }}</td>
                <td>
                    {% if news.createdBy is not null %}
                        {{ news.createdBy.firstName|capitalize }} {{ news.createdBy.lastName|capitalize }}
                    {% endif %}
                </td>
                <td>{{ news.state|trans }}
                </td>
                <td>
                    <div class="btn-group btn-group-xs">
                        <a href="{{ path('news_view', {id: news.id}) }}" class="btn btn-default" target="_blank"><i class="fa fa-eye"></i> </a>
                        <a href="{{ path('news_update', {id: news.id}) }}" class="btn btn-default"><i class="fa fa-pencil"></i> </a>
                    </div>
                    <a href="{{ path('news_delete', {id: news.id}) }}" class="btn btn-xs btn-danger"><i class="fa fa-trash-o"></i> </a>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <div class="box-body">
        <p>Aucun news</p>
    </div>
{% endif %}