
{{ form_start(form) }}

    {# les erreurs du formulaire #}
    {{ form_errors(form) }}

<div class="col-md-3 col-xs-6 pull-right">
    <div class="row">
        <div class="col-md-8 col-xs-6">
            {{ form_widget(form.state) }}
        </div>
        <div class="col-md-3 col-xs-6">
            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Sauvegarder</button>
        </div>
    </div>
</div>

<ul id="descriptions" class="nav nav-tabs">
    <li class="active"><a href="#content" data-toggle="tab"><i class="fa fa-font"></i> Contenu</a></li>
    <li><a href="#seo" data-toggle="tab"><i class="fa fa-bar-chart-o"></i> Référencement</a></li>
    {#<li><a href="#settings" data-toggle="tab"><i class="fa fa-cog"></i> Paramètres</a></li>#}
</ul>

<div class="spacer"></div>

<div class="tab-content">
    <div class="tab-pane fade in active" id="content">

        <div class="row">
            <div class="col-lg-3">
                <div id="img-preview"></div>
                {{ form_widget(form.image) }}
            </div>
            <div class="col-lg-9">


                <div class="form-group">
                    {{ form_label(form.title, "Titre", {"label_attr": {"class": "col-sm-2"}}) }}
                    {{ form_errors(form.title) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.title) }}
                    </div>
                </div>
                    {{ form_errors(form.content) }}
                <div class="form-group">
                    {{ form_label(form.title, "Contenu", {"label_attr": {"class": "col-sm-2"}}) }}
                    <div class="col-sm-10">
                    {{ form_widget(form.content) }}
                    </div>
                </div>

            </div>
        </div>
    </div><!-- /#content -->

    <div class="tab-pane fade in" id="seo">
        <div class="form-group">
            {{ form_label(form.seo.metaTitle, "Meta Titre", {"label_attr": {"class": "col-sm-2"}}) }}
            {{ form_errors(form.seo.metaTitle) }}
            <div class="col-sm-9">
                {{ form_widget(form.seo.metaTitle) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.seo.metaDescription, "Meta Description", {"label_attr": {"class": "col-sm-2"}}) }}
            {{ form_errors(form.seo.metaDescription) }}
            <div class="col-sm-9">
                {{ form_widget(form.seo.metaDescription) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.seo.metaKeywords, "Meta Keywords", {"label_attr": {"class": "col-sm-2"}}) }}
            {{ form_errors(form.seo.metaKeywords) }}
            <div class="col-sm-9">
                {{ form_widget(form.seo.metaKeywords) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.seo.seoUrl, "Url", {"label_attr": {"class": "col-sm-2"}}) }}
            {{ form_errors(form.seo.seoUrl) }}
            <div class="col-sm-9">
                {{ form_widget(form.seo.seoUrl) }}
            </div>
        </div>

    </div><!-- /#seo -->

</div>
{{ form_rest(form) }}

{{ form_end(form) }}